<main class="content-wrapper">
    <div class="content">
      <h1 class="section-title">Species list</h1>
      <a class="card-link method-card w-inline-block" href="#">
        <div>
          <div class="row">
            <div>Method :</div>
            <div class="response">{{method.name}}</div>
          </div>
          <div class="row">
            <div>Discipline :</div>
            <div class="response">{{method.discipline}}</div>
          </div>
          <div class="row">
            <div>Area sampled :</div>
            <div class="response">{{method.area}}</div>
          </div>
          <div class="row">
            <div>Number of Observers :</div>
            <div class="response">{{method.obs}}</div>
          </div>
          <div class="row">
            <div>Number of species :</div>
            <div class="response">{{method.species}}</div>
          </div>
          <div class="project-card-footer">
            <div class="project-card-dates">{{this.method.start}} &#x279E; {{this.method.end}}</div>
            <div class="project-card-id"><span class="number-sign">#</span>{{method.id}}</div>
          </div>
        </div>
      </a>
      <div class="w-form">
        <form data-name="Email Form" id="email-form" name="email-form">
          <div class="actions-bar">
            <a class="add-species-button w-button" href="/newspecies">add Taxon</a>
            <input class="delete-button w-button" data-wait="Please wait..." type="submit" value="Delete">
          </div>
          <ul class="cards-list w-list-unstyled">
            <li class="card">
              <a class="card-inner-link w-inline-block" href="#">
                <div>
                  <div>{{this.commonName}}</div>
                  <div>{{this.scientificName}}</div>
                  <div class="taxon-count">Count : {{this.count}}</div>
                </div>
              </a>
              <div class="card-edit">
                <div class="taxon-id"><span class="number-sign">#</span>{{this.id}}</div>
                <div class="w-checkbox w-clearfix">
                  <input class="w-checkbox-input" data-name="Select" id="Select" name="Select" type="checkbox">
                  <label class="checkbox-label-hidden w-form-label" for="Select">Select</label>
                </div>
              </div>
            </li>
          </ul>
        </form>
        <div class="w-form-done">
          <div>Thank you! Your submission has been received!</div>
        </div>
        <div class="w-form-fail">
          <div>Oops! Something went wrong while submitting the form</div>
        </div>
      </div>
    </div>
  </main>